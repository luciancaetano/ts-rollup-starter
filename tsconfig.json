{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "strict": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "declaration": false,
    "esModuleInterop": true,
    "types": [
      "@types/node"
    ]
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "./examples/**/*",
    "./lib/**/*"
  ]
}